{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ServiceSettings": {
    "ServiceName": "Identity"
  },
  "MongoDbSettings": {
    "Host": "localhost",
    "Port": 27017
  },
  "IdentitySettings": {
    "AdminUserEmail": "admin@dynamic-driving.com"
  },
  "AllowedHosts": "*",
  "IdentityServerSettings": {
    "ApiScopes": [
      {
        "Name": "tripmanagement.fullaccess"
      },
      {
        "Name": "tripmanagement.writeaccess"
      },
      {
        "Name": "tripmanagement.readaccess"
      },
      {
        "Name": "drivermanagement.fullaccess"
      },
      {
        "Name": "drivermanagement.writeaccess"
      },
      {
        "Name": "drivermanagement.readaccess"
      },
      {
        "Name": "IdentityServerApi"
      }
    ],
    "ApiResources": [
      {
        "Name": "TripManagement", // this is transformed into the audience in the JWT
        "Scopes": [
          "tripmanagement.fullaccess",
          "tripmanagement.writeaccess",
          "tripmanagement.readaccess"
        ],
        "UserClaims": [
          "role",
          "name",
          "email"
        ]
      },
      {
        "Name": "DriverManagement", // this is transformed into the audience in the JWT
        "Scopes": [
          "drivermanagement.fullaccess",
          "drivermanagement.writeaccess",
          "drivermanagement.readaccess"
        ],
        "UserClaims": [
          "role",
          "name",
          "email"
        ]
      },
      {
        "Name": "Identity",
        "Scopes": [
          "IdentityServerApi"
        ],
        "UserClaims": [
          "role",
          "name",
          "email"
        ]
      }
    ]
  }
}